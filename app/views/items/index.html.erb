<div class="container">
	<div id="titlerow" class="row text-center">
		<div class="col-lg-12">
			<h1>Todo App</h1>
		</div>
	</div>

	<div id="inputrow" class="row">
		<div class="col-lg-12">
			<%= form_tag do %>
				<div class="input-group">
					<input type="text" class="form-control" name="newitem[name]" placeholder="To do." aria-describedby="save-btn">

					<span class="input-group-btn">
						<button id="save-btn" class="btn btn-success" type="submit">Save</button>
					</span>
				</div>			
			<% end %>
		</div>
	</div>

	<div id="itemsrow" class="row">
		<div class="col-lg-12">
			<ul class="list-group">
				<% @items.each do |item| %>
					<li id="item<%= item.id %>" class="list-group-item"><%= item.name %></li>
				<% end %>
			</ul>
		</div>
	</div>
</div>
