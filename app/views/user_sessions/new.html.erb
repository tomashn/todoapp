<div class="container">
	<div id="titlerow" class="row text-center">
		<div class="col-lg-12">
			<h1>Todo App</h1>
		</div>
	</div>

	<% if @user_session.errors.any? %>
		<div class="row">
			<div class="col-lg-6 col-lg-offset-3">
				<ul>
					<% @user_session.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		</div>
	<% end %>

	<div class="row text-center">
		<div class="col-lg-6 col-lg-offset-3">
			<%= form_for @user_session, url: login_path, html: {class: "form-inline"} do |f| %>
				<div id="fg-login" class="form-group">
						<div id="email_field" class="form-group"> <%= f.email_field :email, class: "form-control", placeholder: "Email" %> </div>
						<div id="password_field" class="form-group"> <%= f.password_field :password, class: "form-control", placeholder: "Password" %> </div>

						<div class="form-group"> <%= f.submit "Login", class: "btn btn-success", id: "login-btn" %> </div>
				</div>
			<% end %>
		</div>
	</div>
</div>
